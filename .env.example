# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/apex_digital
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=org-your-org-id

# Payment Gateways
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_PASSPHRASE=your_passphrase
PAYFAST_ENV=production # or sandbox

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENV=production # or sandbox

# Bank Details for Direct EFT
BANK_NAME=Standard Bank
BANK_ACCOUNT_NUMBER=1234567890
BANK_ACCOUNT_NAME=Apex Digital Studio (Pty) Ltd
BANK_BRANCH_CODE=051001

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Apex Digital Studio <noreply@apexdigital.studio>

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=af-south-1
AWS_BUCKET_NAME=apex-digital-studio
AWS_BUCKET_URL=https://apex-digital-studio.s3.af-south-1.amazonaws.com

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=your-sentry-dsn

# AI Model Configuration
STABILITY_API_KEY=sk-your-stability-api-key
REPLICATE_API_TOKEN=r8_your_replicate_token

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin123

# Feature Flags
ENABLE_AI_TRAINING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REALTIME_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600 # 1 hour
CACHE_MAX_ITEMS=1000

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
RATE_LIMITER_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=./logs

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000 # 24 hours

# Queue (Bull)
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_DB=0

# WebSocket
WS_PORT=8080
WS_PATH=/socket.io

# API Version
API_VERSION=v1
